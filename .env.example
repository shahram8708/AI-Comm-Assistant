###############################################################################
# Copy this file to `.env` and fill in the appropriate values.                #
###############################################################################

# Flask & Application Settings
FLASK_ENV=development
SECRET_KEY=please_change_this_secret

# Database
DATABASE_URL=sqlite:///app.db

# Redis (for Celery and caching)
REDIS_URL=redis://redis:6379/0

# Google Gemini API
GEMINI_API_KEY=

# Email (IMAP) configuration.  You can either use basic IMAP credentials or
# OAuth tokens for Gmail.  If both password and OAuth tokens are provided,
# OAuth will take precedence.
MAIL_IMAP_HOST=imap.gmail.com
MAIL_IMAP_PORT=993
MAIL_IMAP_USER=
MAIL_IMAP_PASSWORD=

# Gmail OAuth (optional)
MAIL_CLIENT_ID=
MAIL_CLIENT_SECRET=
MAIL_REFRESH_TOKEN=

# Mailbox name to poll (e.g. "INBOX")
MAIL_MAILBOX=INBOX

# SMTP configuration (used when sending replies).  If left blank the app
# simulates sending by printing the message to the console.
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=

# Slack notifications
SLACK_WEBHOOK_URL=

# Offline mode flag.  When true, incoming emails are queued and not processed
# until connectivity is restored.  Export/import functions are available.
OFFLINE_MODE=false

# Miscellaneous
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,hi
PRIORITY_TIMEOUT_MINUTES=30